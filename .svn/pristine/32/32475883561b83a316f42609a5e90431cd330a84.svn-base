+function ($) {
    $.getCaptcha = function (cc) {
        //获取captcha
        $(cc).click(function () {
            var date = new Date();
            var timestamp = date.getTime();
            var url = "/captcha";
            $.ajax({
                url: url,
                data: {tstamp: timestamp},
                method: "GET",
                dataType: "Json",
                beforeSend: function () {
                    $(cc).html("<img style='width:100px;' src='/static/img/loading.gif'");
                },
                success: function (data) {
                    if (data) {
                        var imgsrc = "<img src=" + data['imgsrc'] + "/>";
                        $(cc).html(imgsrc);
                    }
                }
            });
        });
    }
}($);

