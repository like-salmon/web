{% extends "admin_panel.html" %}
{% block content %}
    <form method="get" id="smsf" class="cform">
        <a id="addc" href="javascript:;"><i class="fa fa-plus-square-o fa-2x" aria-hidden="true"></i><span>添加客户</span></a>
        <h3><i class="fa fa-search fa-lg"></i>搜索客户</h3>
        <div class="frow">
            <label>客户类型:</label>
        <select name="ctype" id="ctype">
            <option value="1" {% if ctype == '0'%}selected{% end %}>已成交客户</option>
            <option value="0" {% if ctype == '1'%}selected{% end %}>未成交客户</option>
        </select>
        <br />
        </div>

        <div class="area frow">
            <div class="nums">
                <label>客户账号:</label><input type="text" name="cacc" class="cacc" value="{{cacc}}"/>
            </div>
            <div class="nums">
                <label>真实姓名:</label><input type="text" name="rname" class="rname" value="{{rname}}"/>
            </div>
            <div class="nums">
                 <label>手机号码:</label><input type="text" name="mobile" class="mobile" value="{{mobile}}"/>
            </div>
            <div class="nums">
                <label>QQ:</label><input type="text" name="qq" class="qq" value="{{qq}}"/>
            </div>
            <div class="nums">
                <input type="submit" value="搜索"/>
            </div>
        </div>
    </form>
    <h3>客户列表</h3>
    <table class="machines_tb clients_tb">
        <tbody>
        <tr class="title">
            <td>编号</td>
            <td>客户账号</td>
             <td>真实姓名</td>
            <td>手机号码</td>
            <td>身份证</td>
            <td>客户归属</td>
            <td>QQ号码</td>
            <td>客户备注</td>
            <td>操作</td>
        </tr>
        {% if cs %}
        {% for i in cs %}
            <tr class="mlist">
                <td class="tid">{{i[0]}}</td>
                <td><input type="text" disabled="disabled" name="acc" class="acc" value="{{i[1]}}"/></td>
                <td><input type="text" disabled="disabled" name="rname" class="rname" value="{{i[3]}}"/></td>
                <td><input type="text" disabled="disabled" name="mobile" class="mobile" value="{{i[5] if i[5] else ''}}"/></td>
                <td><input type="text" disabled="disabled" name="idc" class="idc" value="{{i[7]}}"/></td>
                <td><input type="text" disabled="disabled" name="ws" class="ws" value="{{i[9] if i[9] else ''}}"/></td>
                <td><input type="text" disabled="disabled" name="qq" class="qq" value="{{i[10] if i[10] else ''}}"/></td>
                <td><input type="text" disabled="disabled" name="memo" class="memo" value="{{i[11] if i[11] else ''}}"/></td>
                <td class="ltd"><span class="edit">编辑</span>|<span class="remove">删除</span></td>
        </tr>

        {% end %}
        {% end %}
        </tbody>
    </table>
    <ul class="pagination">
        {% if pages and 1< pages <= 24 %}
        {% for i in range(1,pages+1) %}
            {% if i == offset %}
                    <li><a href="/admin/clients?offset={{i}}" class="active">{{i}}</a></li>
                    {% else %}
                    <li><a href="/admin/clients?offset={{i}}" class="">{{i}}</a></li>
                    {% end %}
            {% end %}
        {% end %}
        {% if pages and pages > 24 %}
        {# ------ #}
        <li><a href="/admin/clients?offset={{1}}" class=""><<</a></li>

        {% if offset > 1%}
            <li><a href="/admin/clients?offset={{offset-1}}" class=""><</a></li>
        {% end %}
        {% if offset < pages/3 %}
            {% if (pages/3 - offset) >6 and offset >9  %}
               {% for i in range(1,5) %}
                    <li><a href="/admin/clients?offset={{i}}" class="">{{i}}</a>
                    {% end %}
                    <li><a href="javascript:;" class="empty">...</a>
                    {% for i in range(offset-2,offset+3) %}
                    {% if i == offset %}
                    <li><a href="/admin/clients?offset={{i}}" class="active">{{i}}</a>
                    {% else %}
                    <li><a href="/admin/clients?offset={{i}}" class="">{{i}}</a>
                    {% end %}
                    {% end %}
            {% elif (pages/3 - offset) > 6 and offset <=9  %}
                {% for i in range(1,offset+4) %}
                    {% if i == offset %}
                    <li><a href="/admin/clients?offset={{i}}" class="active">{{i}}</a>
                    {% else %}
                    <li><a href="/admin/clients?offset={{i}}" class="">{{i}}</a>
                    {% end %}
                {% end %}
        {% elif (pages/3 - offset) <= 6 and offset>9  %}
            {% for i in range(1,5) %}
                    <li><a href="/admin/clients?offset={{i}}" class="">{{i}}</a>
                    {% end %}
                    <li><a href="javascript:;" class="empty">...</a>
                    {% for i in range(offset-3,offset+3) %}
                    {% if i == offset %}
                    <li><a href="/admin/clients?offset={{i}}" class="active">{{i}}</a>
                    {% else %}
                    <li><a href="/admin/clients?offset={{i}}" class="">{{i}}</a>
                    {% end %}
                    {% end %}
        {% elif (pages/3 - offset) <= 6 and offset <= 9  %}
            {% for i in range(1,offset+4) %}
                    {% if i == offset %}
                    <li><a href="/admin/clients?offset={{i}}" class="active">{{i}}</a>
                    {% else %}
                    <li><a href="/admin/clients?offset={{i}}" class="">{{i}}</a>
                    {% end %}
                {% end %}
    {% end %}

        <li><a href="javascript:;" class="empty">...</a></li>

        {% for i in range(pages/2-3,pages/2+3) %}
            <li><a href="/admin/clients?offset={{i}}">{{i}}</a></li>
        {% end %} {# end for #}
        <li><a href="javascript:;" class="empty">...</a></li>

        {% for i in range(pages-3,pages+1) %}
            <li><a href="/admin/clients?offset={{i}}">{{i}}</a></li>
        {% end %}
        {% end %} {# end if offset 1/3 #}

        {# ------ #}

        {# 1/3 ~ 2/3 part #}
        {% if pages/3 <= offset <= pages/3*2 %}
        {% for i in range(1,5) %}
            <li><a href="/admin/clients?offset={{i}}">{{i}}</a></li>
        {% end %}{# end for #}

        <li><a href="javascript:;" class="empty">...</a></li>

        {% for i in range(offset-3,offset+4) %}
        {% if i == offset %}
            <li><a href="/admin/clients?offset={{i}}" class="active">{{i}}</a></li>
            {% else %}
        <li><a href="/admin/clients?offset={{i}}">{{i}}</a></li>
        {% end %} {# end if #}

        {% end %} {# end for #}
        <li><a href="javascript:;" class="empty">...</a></li>

        {% for i in range(pages-3,pages+1) %}
            <li><a href="/admin/clients?offset={{i}}">{{i}}</a></li>
        {% end %} {# end for #}
        {% end %} {# end if offset 2/3 #}

        {# ------ #}

        {# pages-3 part #}
        {% if pages/3*2 < offset <= pages %}
        {% for i in range(1,6) %}
            {% if i == offset %}
            <li><a href="/admin/clients?offset={{i}}" class="active">{{i}}</a></li>
            {% else %}
            <li><a href="/admin/clients?offset={{i}}" class="">{{i}}</a></li>
            {% end %}
        {% end %}
        <li><a href="javascript:;" class="empty">...</a></li>

        {% for i in range(pages/2-3,pages/2+3) %}
            {% if i == offset %}
            <li><a href="/admin/clients?offset={{i}}" class="active">{{i}}</a></li>
            {% else %}
            <li><a href="/admin/clients?offset={{i}}" class="">{{i}}</a></li>
            {% end %}
        {% end %} {# end for #}
        <li><a href="javascript:;" class="empty">...</a></li>

        {% if pages - offset < 6 %}
            {% for i in range(offset-2,pages+1) %}
            {% if i == offset %}
                <li><a href="/admin/clients?offset={{i}}" class="active">{{i}}</a></li>
            {% else %}
                <li><a href="/admin/clients?offset={{i}}" class="">{{i}}</a></li>
            {% end %}
            {% end %}
        {% else %}
            {% for i in range(offset-2,offset+2) %}
                {% if i == offset %}
                <li><a href="/admin/clients?offset={{i}}" class="active">{{i}}</a></li>
                {% else %}
                <li><a href="/admin/clients?offset={{i}}" class="">{{i}}</a></li>
                {% end %}
            {% end %}
            <li><a href="javascript:;" class="empty">...</a></li>
            {% for i in range(pages-3,pages+1) %}
                {% if i == offset %}
                    <li><a href="/admin/clients?offset={{i}}" class="active">{{i}}</a></li>
                {% else %}
                    <li><a href="/admin/clients?offset={{i}}" class="">{{i}}</a></li>
                {% end %}
            {% end %} {# end for #}
        {% end %}
        {% end %} {# end if if 2/3*pages<= offset <= pages% #}
        {% if offset < pages %}
        <li><a href="/admin/clients?offset={{offset+1}}" class="">> </a></li>
        {% end %}
        <li><a href="/admin/clients?offset={{pages}}" class="">>></a></li>
        {% end %} {# end if pages #}
    </ul>

<div class="modal-ct addclient">
        <img class="mclose" src="{{static_url("img/close.png")}}"/>
        <h2>添加客户</h2>
        <div class="modal-dt">
            <form id="caddform" class="mform" action="/admin/orders/suborder/">
                {% raw xsrf_form_html() %}
                <div class="data">
                </div>
                <div class="frow" style="text-align: center;">
                    <input type="submit" class="n_sobtn sbtn" value="添加" style="background-color: #17578d;color:#fff;"/>
                    <div class="tips"><span></span></div>
                </div>

            </form>
        </div>

    </div>
{% end %}
