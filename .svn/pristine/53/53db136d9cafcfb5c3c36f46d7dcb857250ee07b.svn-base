{% extends "admin_panel.html" %}
{% block content %}

<h3>新增用户</h3>
<hr/>
<form method="post" class="mform rform" id="mpwdform">
        {% raw xsrf_form_html() %}
    <div class="frow">
        <label>用户账号:</label><input type="text" name="uacc" id="uacc" maxlength="9" pattern="^llidc-[a-zA-Z0-9]{2,3}" placeholder="请输入以llidc-为开头的用户账号"/>
        <div class="tips amntips"><i></i>
            <p></p></div>
    </div>
    <div class="frow">
        <label>用户姓名:</label><input type="text" placeholder="请输入真实姓名" name="rname" minlength="2" maxlength="8" pattern="^[\u4e00-\u9fa5]{2,4}" required/>
        <div class="tips ntips"><i></i><p></p></div>
        </div>
    <div class="frow" style="text-align: left;">
        <label>用户类型:</label><select name="ctype" id="ctype"> <option value="2">IDC运维</option> <option value="1" selected>销售</option></select>
    </div>
    <div class="frow">
        <label>密码:</label><input type="password" name="unpwd" maxlength="20" autocomplete="new-password" id="unpwd" value="" required/>
        <div class="tips amntips"><i></i>
            <p></p></div>
    </div>
    <div class="frow">
        <label>确定密码:</label><input type="password" name="unrpwd" maxlength="20" autocomplete="new-password" id="unrpwd" value="" required/>
        <div class="tips amntips"><i></i>
            <p></p></div>
    </div>
    <div class="frow">
        <input type="submit"   style="margin-left: 135px;"class="mpbtn addbtn regbtn" value="提交"/>
    </div>

</form>

{% end %}
{% block script %}
<script type="text/javascript">

 var obj =$.regconfig(".rform");
        for(var i in obj){
            $.validateField.call(null,obj[i]);
        }
</script>
{% end %}