<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <title>利联科技-客户注册登陆</title>
    <meta name="application-name" content="利联科技"/>
    <meta name="renderer" content="webkit"><!-- 强制360使用极速模式 -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <link rel="shortcut icon" href="{{static_url("img/favicon.ico")}}" type="image/x-icon"/>
    <link rel="icon" href="{{static_url("img/favicon.ico")}}" type="image/x-icon"/>
    <link rel="stylesheet" href="{{static_url("css/public.css")}}"/>
    <link rel="stylesheet" href="{{static_url("css/font-awesome-4.7.0/css/font-awesome.css")}}"/>
    <link rel="stylesheet" href="{{static_url("css/client/client.css")}}"/>
</head>

<style>

    body {
        overflow: hidden;
    }

</style>

<body>
<div class="content cauth">

</div>

<div class="authbox">
    <ul class="nul">
        <li class="active" data-target="clogin">登陆</li>
        <li class="" data-target="creg">注册</li>
    </ul>
    <div id='clogin' class="shtabs active">
        <form id="adlgform" class='cform' method="post">
            {% raw xsrf_form_html() %}
            <div class="frow">
                <input type="text" placeholder="请输入手机号码" name="umb" maxlength="11" class="finput"
                       autocomplete="new-password" required/>
                <i class="fa fa-address-book-o fa-2x" aria-hidden="true"></i>
                <div class="tips mbtips"><i></i>
                    <p></p></div>
            </div>
            <div class="frow">
                <input type="password" placeholder="请验证码" name="ucc" maxlength="6" class="finput" autocomplete="new-password" pattern="[a-zA-Z0-9@\-]{6,16}" required/>
                <i class="fa fa-key fa-2x" aria-hidden="true"></i><input type="button" id='scc' value="发送验证码"/>
                <div class="tips cctips"><i></i>
                    <p></p></div>
            </div>
            <div class="frow">
                <input type="submit" value="登陆" class="lgbtn" style="background-color:#ccc;color:#fff;"
                       disabled="disabled"/>
            </div>

        </form>

    </div>
    <div id='creg'class="shtabs">
        <form id="rform" method="post">
            {% raw xsrf_form_html() %}
            <div class="frow">
                <input type="text" placeholder="请输入用户名" name="uacc" maxlength="20" class="finput" autocomplete="new-password" required/>
                <i class="fa fa-address-book-o fa-2x" aria-hidden="true"></i>
                <div class="tips amntips"><i></i>
                    <p></p></div>
            </div>
            <div class="frow">
                <input type="text" placeholder="请输入手机号码" name="uacc" maxlength="20" class="finput" pattern="\d{11}" autocomplete="new-password" required/>
                <i class="fa fa-address-book-o fa-2x" aria-hidden="true"></i>
                <div class="tips amntips"><i></i>
                    <p></p></div>
            </div>
            <div class="frow">
                <input type="password" placeholder="请输入6-16位用户密码" name="upwd" maxlength="16" class="finput" autocomplete="new-password" pattern="[a-zA-Z0-9@\-]{6,16}" required/>
                <i class="fa fa-key fa-2x" aria-hidden="true"></i>
                <div class="tips ampwdtips"><i></i>
                    <p></p></div>
            </div>
            <div class="frow">
                <input type="password" placeholder="请再次输入密码" name="upwd" maxlength="16" class="finput" autocomplete="new-password" pattern="[a-zA-Z0-9@\-]{6,16}" required/>
                <i class="fa fa-key fa-2x" aria-hidden="true"></i>
                <div class="tips ampwdtips"><i></i>
                    <p></p></div>
            </div>
            <div class="frow" style="position: relative;">
                <input type="text" placeholder="请输入验证码" maxlength="4" name="captcha" pattern="[a-zA-Z0-9]{4}" autocomplete="new-password" class="finput" required/>
                <i class="fa fa-file-image-o fa-2x"></i>
                <div class="ccha">
                    <img src="{{acc}}"/>
                </div>
                <div class="tips cctips"><i></i>
                    <p></p></div>
            </div>
            <div class="frow">
                <input type="submit" value="注册" class="lgbtn" style="background-color:#ccc;color:#fff;" disabled="disabled"/>
            </div>

        </form>
    </div>

</div>

<script type="text/javascript" src="{{static_url("js/jquery-1.9.1.min.js")}}"></script>
<script type = "text/javascript" src="{{static_url("js/admin.js")}}"></script>
<script type="text/javascript">
    $(".cform .frow #scc").click(function(){
       var that = $(this);
       var phone = $(".cform .frow input[name=umb]").val();
       $(this).attr("disabled",true).css({"background-color":"#ccc"}).val("正在发送...");
       $.get("/client/getcc/",{phone:phone},function(data){
           if(data['rs'] == "1050"){
                that.val("已发送");
                var t = 100;
                window.setInterval(function(){
                    that.val(100);
                    t-=1;
                },1000);
               if(t==0){
                    that.attr("disabled",false).css({"background-color":"#a78c3f"}).val("发送验证码");
               }
           }else if(data['rs'] == "1051"){
                that.val("获取验证码失败，请稍后再试!");
           }
       },"json");
    });
</script>
</body>
</html>
